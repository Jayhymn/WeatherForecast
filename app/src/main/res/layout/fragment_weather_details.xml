<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:padding="16dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- City Name -->
        <TextView
            android:id="@+id/tvCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City Name"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Current Weather Description -->
        <TextView
            android:id="@+id/tvWeatherCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Clear Sky"
            android:textColor="@color/secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Current Temperature -->
        <TextView
            android:id="@+id/tvCurrentTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="25°C"
            android:textColor="@color/primary"
            android:textSize="48sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Min/Max Temperatures -->
        <TextView
            android:id="@+id/tvMinMaxTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Min: 18°C | Max: 30°C"
            android:textColor="@color/secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <!-- Weather Icon -->
        <ImageView
            android:id="@+id/ivWeatherIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/weather_icon_desc"
            android:src="@drawable/ic_clear_sky" />

        <!-- Additional Info -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Humidity: 70%"
                android:textColor="@color/secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvWindSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Wind: 5 m/s"
                android:textColor="@color/secondary"
                android:layout_alignParentEnd="true"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- Daily Forecast Title -->
        <TextView
            android:id="@+id/tvDailyForecastTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7-Day Forecast"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <!-- Daily Forecast RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDailyForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/daily_forecast_item"
            android:overScrollMode="never" />
    </LinearLayout>
</ScrollView>
