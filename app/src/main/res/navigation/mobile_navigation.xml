<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.wakeupdev.weatherforecast.ui.fragments.WeatherFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_weather" >
        <action
            android:id="@+id/action_currentFragment_to_dailyWeatherFragment"
            app:destination="@id/daily_weather_fragment" />
    </fragment>

    <fragment
        android:id="@+id/daily_weather_fragment"
        android:name="com.wakeupdev.weatherforecast.ui.fragments.DailyWeatherFragment"
        android:label="@string/title_daily"
        tools:layout="@layout/fragment_daily_weather">
        <argument
            android:name="weatherData"
            app:argType="com.wakeupdev.weatherforecast.data.WeatherData" />
    </fragment>


<!--    <fragment-->
<!--        android:id="@+id/navigation_search"-->
<!--        android:name="com.wakeupdev.weatherforecast.ui.fragment.SearchFragment"-->
<!--        android:label="@string/title_search"-->
<!--        tools:layout="@layout/fragment_search" />-->

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.wakeupdev.weatherforecast.ui.fragments.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.wakeupdev.weatherforecast.ui.fragments.ProfileFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_profile" />

</navigation>